<resources xmlns:tools = "http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name = "Theme.Week02Day03" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name = "colorPrimary">@color/green_a</item>
        <item name = "colorPrimaryVariant">@color/green_b</item>
        <item name = "colorOnPrimary">@color/orange_a</item>
        <!-- Secondary brand color. -->
        <item name = "colorSecondary">@color/teal_200</item>
        <item name = "colorSecondaryVariant">@color/teal_700</item>
        <item name = "colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name = "android:statusBarColor" tools:targetApi = "l">@color/green_a</item>
        <!-- Customize your theme here. -->
    </style>

    <style name = "MainButtonStyle">
        <item name = "android:background">@drawable/main_button_bg</item>
        <item name = "android:textSize">24sp</item>
        <item name = "android:textColor">@color/white</item>
    </style>
    <style name = "MainEditTextStyle">
        <item name = "android:background">@drawable/main_edittext_bg</item>
        <item name="android:textSize">24sp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:padding">16dp</item>
    </style>
</resources>